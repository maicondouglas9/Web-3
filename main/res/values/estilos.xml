<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="moldura">
        <item name="android:background">@drawable/moldura</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">600dp</item>
        <item name="android:layout_marginHorizontal">30dp</item>


    </style>

    <style name="molduracadastro">
        <item name="android:background">@drawable/moldura</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">650dp</item>
        <item name="android:layout_marginHorizontal">30dp</item>


    </style>

    <style name="campos">
        <item name="android:background">@drawable/moldura_campos</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginHorizontal">70dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">#945F3411</item>
        <item name="android:textColor">@color/app_marrom</item>

    </style>

    <style name="legenda">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_marginHorizontal">80dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>