<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_madeira"
    tools:context=".controller.CriarEvento">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Criar Evento"
        android:textColor="@color/app_marrom"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCriarVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="-300dp"
        android:layout_marginTop="24.5dp"
        android:background="@drawable/it_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view"
        style="@style/molduracadastro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.488" />

    <EditText
        android:id="@+id/edtNomeCriar"
        style="@style/campos"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Nome do evento"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        style="@style/legenda"
        android:text="Informe os detalhes do evento"
        android:textColor="@color/app_marrom"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <EditText
        android:id="@+id/edtDrecricaoCriar"
        style="@style/campos"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Descrição do evento"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:minLines="4"
        android:textColorHint="#945F3411"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/edtLocalCriar" />

    <EditText
        android:id="@+id/edtDataCriar"
        style="@style/campos"
        android:ems="10"
        android:hint="Dia do evento"
        android:inputType="number"
        android:maxLength="10"
        android:textColorHint="#945F3411"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeCriar" />

    <EditText
        android:id="@+id/edtHoraCriar"
        style="@style/campos"
        android:ems="10"
        android:hint="Horário do evento"
        android:inputType="time"
        android:maxLength="5"
        android:textColorHint="#945F3411"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/edtDataCriar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEventoCriar"
        style="@style/btn"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="160dp"
        android:text="Criar evento"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDrecricaoCriar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLimparCampos"
        style="@style/btn"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-160dp"
        android:text="Limpar Campos"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDrecricaoCriar" />

    <EditText
        android:id="@+id/edtLocalCriar"
        style="@style/campos"
        android:ems="10"
        android:hint="Local do evento"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/edtHoraCriar" />


</androidx.constraintlayout.widget.ConstraintLayout>